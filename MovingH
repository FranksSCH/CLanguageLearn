#include <stdio.h>
#include <stdlib.h>
#include <windows.h>

int main() {
    int a, b, i;
    a = 0;
    i = 0;
    //scanf("%d", &i);
    while (a <= i) {
        system("cls");
        b = 1;
        while (b <= a) {
            printf(" ");
            b = b + 1;
        }
        printf("H");
        Sleep(1000);
        a = a + 1;
        i=i+1;
    }
    system("pause");
    return 0;
}
